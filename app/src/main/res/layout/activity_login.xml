<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/loginWindowBackground"
    tools:context="com.jqyd.yuerduo.LoginActivity">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/TopBarTitle"
                android:textColor="@color/loginTitle"
                android:text="登录" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="40dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/photo"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:background="@drawable/login_input"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/yonghuming"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="65dp"
                android:layout_height="40dp" />
            <EditText
                android:textColorHint="@color/textColorHint"
                android:textSize="16sp"
                android:inputType="number"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:background="@null"
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/login_input"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/mima"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="65dp"
                android:layout_height="40dp" />
            <EditText
                android:textColorHint="@color/textColorHint"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:maxLength="11"
                android:background="@null"
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <TextView
            android:textColor="@color/loginForgetPwd"
            android:id="@+id/bt_forgetPWD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="忘记密码" />
        <Button
            android:id="@+id/bt_login"
            style="@style/buttonNormal"
            android:background="@drawable/radiobutton"
            android:layout_marginTop="30dp"
            android:text="登录" />


    </LinearLayout>

</LinearLayout>
